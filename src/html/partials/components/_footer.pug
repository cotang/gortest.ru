include ../abstracts/bemto/bemto.pug


// Footer
+b.FOOTER.footer
  +e.inner.container
    .row
      .col-xs-12.col-md-6.col-lg-3
        // Logo
        +b.A.logo--footer(href="index.html", itemscope, itemtype="http://schema.org/Brand")       
          img(src="img/logo-footer.png", alt="logo", title="logo", itemprop="logo")

      .col-xs-12.col-md-6.col-lg-4.flex-lg-last
        +e.btn
          +b.A.btn--footer(href="page-form.html") Рассчитать стоимость

      .col-xs-12.col-md-6.col-lg-2
        // Nav
        +b.NAV.nav-footer
          +e.UL.list
            +e.item 
              +e.A.link--active(href="index.html") Главная
            +e.item 
              +e.A.link(href="page.html") О компании
            +e.item 
              +e.A.link(href="page-services.html") Услуги
            +e.item 
              +e.A.link(href="page-news.html") Новости
            +e.item
              +e.A.link(href="page-contacts.html") Контакты

      .col-xs-12.col-md-6.col-lg-3
        +b.contacts-section--footer(itemscope, itemtype="http://schema.org/ContactPoint")
          +e.line 
            +e.SPAN.city(itemprop="areaServed") Санкт-Петербург
          +e.line 
            +e.SPAN.working-hours(itemprop="hoursAvailable") Мы работаем с 9:30 до 18:00
          +e.line 
            +e.A.link--tel(href="tel:+78129279411", target="_blank", itemprop="telephone") +7 (812) 927-94-11
          +e.line 
            +e.A.link--email(href="mailto:spb@gostest.ru", target="_blank", itemprop="email") spb@gostest.ru

    .row
      .col-xs-12
        +e.copyright © Сертификационный центр "ГорТест". 2008 - 2016

// Fixed sidebar
+b.ASIDE.sidebar
  // Social links
  +b.UL.social-links
    +e.item
      +e.A.link--search(href="#")
    //- +e.item
    //-   +e.A.link--rss(href="#")
    +e.item
      +e.A.link--vk(href="#")
    //- +e.item
    //-   +e.A.link--tw(href="#")
    //- +e.item
    //-   +e.A.link--fb(href="#")
    +e.item
      +e.A.link--price(href="page-questions.html") Задать вопрос
  +b.A.up(href="#")


// Overlay
+b.overlay
  +e.bg
  +e.form
    +e.close(href="/")
    // Form cost
    include _form--cost.pug 


