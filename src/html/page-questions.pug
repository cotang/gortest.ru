extends partials/templates/_template.pug

block content
  +b.SECTION.page--questions

    // Content
    +b.SECTION.content

      +e.bg
        .container
          // Breadcrumbs
          +b.SECTION.breadcrumbs
              a(href="index.html") Сертификационный центр Гортест
              ='>'
              span Вопросы и ответы
          +e.H1.title Вопросы и ответы
    
    +e.form
      .container
        .row
          .col-xs-12.col-md-8.offset-md-2          
            // Form question
            include partials/components/_form--question.pug

    // Questions
    include partials/components/_questions.pug 
             
    // Specialists
    +b.SECTION.specialists
      .container
        .row
          .col-xs-12.col-xl-6 
            +e.H2.title С вами работает    
            // Manager
            include partials/components/_manager.pug 
          .col-xs-12.col-md-8.offset-md-2.col-lg-6.offset-lg-3.col-xl-6.offset-xl-0
            +e.form
              // Form application
              include partials/components/_form--application.pug


